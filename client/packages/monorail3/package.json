{
  "name": "@simspace/monorail3",
  "version": "0.0.0",
  "description": "Monorail 3",
  "repository": "https://github.com/Simspace/portal-suite",
  "author": "SimSpace",
  "license": "UNLICENSED",
  "peerDependencies": {
    "@mui/material": "5.0.1",
    "@mui/icons-material": "5.0.1",
    "@mui/lab": "5.0.0-alpha.48",
    "@mui/styles": "5.0.1",
    "@mui/styled-engine-sc": "5.0.0",
    "date-fns": "2.23.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "5.3.0"
  },
  "devDependencies": {
    "@emotion/react": "11.4.1",
    "@mui/icons-material": "5.0.1",
    "@mui/lab": "5.0.0-alpha.48",
    "@mui/material": "5.0.1",
    "@mui/styles": "5.0.1",
    "@mui/styled-engine-sc": "5.0.0",
    "@mui/x-data-grid": "5.0.0-beta.2",
    "@mui/x-data-grid-generator": "5.0.0-beta.2",
    "@simspace/configs": "1.0.0",
    "@storybook/addon-a11y": "^6.3.7",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-controls": "^6.3.7",
    "@storybook/addon-docs": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/node-logger": "^6.3.7",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.7",
    "@types/react-transition-group": "4.4.2",
    "barrelsby": "2.2.0",
    "creevey": "0.7.37",
    "date-fns": "2.23.0",
    "jest": "27.0.4",
    "jest-axe": "5.0.1",
    "prettier": "2.4.1",
    "react": "17.0.2",
    "react-docgen-typescript": "2.1.0",
    "react-dom": "17.0.2",
    "react-transition-group": "4.4.2",
    "start-server-and-test": "1.14.0",
    "styled-components": "5.3.0",
    "ts-morph": "11.0.0",
    "typescript": "4.5"
  },
  "resolutions": {
    "@types/react-syntax-highlighter": "^11.0.5",
    "react-syntax-highlighter": "^13.5.3"
  },
  "main": "./dist/index.js",
  "scripts": {
    "prebuild": "yarn generate-barrel",
    "build": "tsc",
    "postbuild": "yarn clean-barrel",
    "test": "jest",
    "clean": "rm -rf dist/ node_modules/ && yarn clean-barrel",
    "prettier:check": "prettier './src/**/*{.js,.ts,.tsx}' --list-different",
    "prettier:write": "prettier './src/**/*{.js,.ts,.tsx}' --write",
    "generate-barrel": "barrelsby --directory ./src --exclude '(__tests__)|(__stories__)|(.gen.tsx)' --delete && yarn prettier",
    "clean-barrel": "rm src/index.ts",
    "gen": "./tools/gen",
    "clean-gen": "find ./src/components -name '*.gen.*' -print | xargs rm && yarn gen",
    "storybook": "start-storybook -p 6006 -s assets",
    "storybook:ci": "start-storybook --ci -p 6006 -s assets",
    "test:visual": "start-server-and-test 'yarn storybook' 6006 'yarn creevey --ui'",
    "test:visual:ci": "start-server-and-test 'yarn storybook:ci' 6006 'yarn creevey'",
    "build-storybook": "build-storybook -s assets"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "prettier --write",
      "jest --findRelatedTests"
    ]
  },
  "jest": {
    "testRegex": "^.+(jest|test)\\.(ts|tsx)$",
    "setupFiles": [
      "<rootDir>/jest/jest.setup.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/jest.postsetup.ts"
    ],
    "moduleNameMapper": {
      "@mui/styled-engine": "@mui/styled-engine-sc",
      "@material-ui/core": "@mui/material"
    },
    "testEnvironment": "jsdom"
  }
}
