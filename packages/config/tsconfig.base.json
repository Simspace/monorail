{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "stripInternal": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "module": "es2022",
    "paths": {
      "@monorail/components": ["../components/src/index"],
      "@monorail/components/*": ["../components/src/*"],
      "@monorail/types": ["../types/src/index"],
      "@monorail/types/*": ["../types/src/*"],
      "@monorail/utils": ["../utils/src/index"],
      "@monorail/utils/*": ["../utils/src/*"],
      "@monorail/themes": ["../themes/src/index"],
      "@monorail/themes/*": ["../themes/src/*"]
    }
  },
  "exclude": ["node_modules", "build", "dist"],
  "include": []
}
