{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "module": "CommonJS",
    "outDir": "./build/cjs",
    "declarationMap": true,
    "declaration": true,
    "declarationDir": "./build/dts",
    "tsBuildInfoFile": "./build/tsconfig.build-cjs.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__stories__/*", "src/**/__tests__/*"]
}
